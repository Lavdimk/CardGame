<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #0C1133"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHorizontal0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@id/gdHorizontal0"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:textStyle="italic"/>


    <EditText
    android:id="@+id/etUsername"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Email"
    android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="40dp"
    app:layout_constraintBottom_toTopOf="@id/gdHorizontal1"
    app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etPassword"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"

        app:layout_constraintTop_toBottomOf="@id/gdHorizontal1"
        app:layout_constraintStart_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginHorizontal="40dp"
        android:textColor="#0C1133"

        android:textSize="18sp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/gdHorizontal2"
        app:layout_constraintStart_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>