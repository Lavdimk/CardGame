<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #0C1133"
    android:id="@+id/tl"
    tools:context=".ui.fragments.SavedPlayer">
    <TextView
        android:id="@+id/yv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The player you challenged:"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="25dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_margin="5dp"
        android:layout_height="100dp"
        android:layout_below="@id/yv"
        />
    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:text="First Name"
        android:textSize="20dp"
        android:layout_below="@id/yv"
        android:layout_margin="5dp"

        />
    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_below="@id/tvFirstName"
        android:text="Last Name"
        android:textSize="20dp"
        android:textStyle="italic"

        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:text="Id"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textStyle="italic"
        android:layout_below="@id/tvLastName"
        />

    <TextView
        android:id="@+id/tvmatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvId"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="15dp"

        android:text="The winner of the previous match:"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvwinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lavdimi"
        android:layout_below="@id/tvmatch"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#448b28"
        android:textSize="27dp"/>








</RelativeLayout>